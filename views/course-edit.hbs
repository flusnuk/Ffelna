<div class="edit-course">
  <div>
    <h3>Редактировать {{course.title}}</h3>

    <form action="/catalog/edit" method="POST" class="course-form">
      <div class="input-field">
        <input id="title" name="title" type="text" class="edit-input validate" required value="{{course.title}}">
        <label for="title">Название вещи</label>
        <span class="helper-text" data-error="Введите название"></span>
      </div>

      <div class="input-field">
        <input id="price" name="price" type="number" class="edit-input validate" required min="1"
          value="{{course.price}}">
        <label for="price">Цена вещи</label>
        <span class="helper-text" data-error="Введите цену"></span>
      </div>


      <div class="input-field">
        <input id="img" name="img" type="text" class="edit-input validate" required value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите url картинки"></span>
      </div>

      <div class="input-field">
        <input id="img2" name="img2" type="text" class="edit-input validate" required value="{{course.img2}}">
        <label for="img2">URL картинки</label>
        <span class="helper-text" data-error="Введите url картинки"></span>
      </div>

      <div class="input-field">
        <input id="img3" name="img3" type="text" class="edit-input validate" required value="{{course.img3}}">
        <label for="img3">URL картинки</label>
        <span class="helper-text" data-error="Введите url картинки"></span>
      </div>
