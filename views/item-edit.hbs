      <select name="category" class="edit-input validate" id="category" required>
        <option value="Hoodies">Hoodies</option>
        <option value="Anoraks">Anoraks</option>
        <option value="Pants">Pants</option>
        <option value="Sweatshirts">Sweatshirts</option>
        <option value="T-shirts">T-shirts</option>
        <option value="Tops">Tops</option>
      </select>
      <label for="category">Категория</label>

      <select type="text" name="color" class="edit-input validate" id="color" placeholder="Enter color*" required>
        <option value="Red">Red</option>
        <option value="Blue">Blue</option>
        <option value="Black">Black</option>
        <option value="Yellow">Yellow</option>
        <option value="White">White</option>
        <option value="Green">Green</option>
      </select>
      <label for="color">Цвет товара</label>
      <div class="input-field">
        <input name="mainDesc" class="edit-input validate" id="mainDesc" placeholder="Enter main description*"
          value="{{item.mainDesc}}" required>
        <label for="mainDesc">Описание товара</label>
        <span class="helper-text" data-error="Введите description"></span>
      </div>

      <div class="input-field">
        <input name="property" class="edit-input validate" id="property" placeholder="Enter property*"
          value="{{item.property}}" required>
        <label for="property">Характеристики товара</label>
        <span class="helper-text" data-error="Введите property"></span>
      </div>
      <div class="input-field">
        <input name="desc" class="edit-input validate" id="desc" placeholder="Enter desc*" value="{{item.desc}}"
          required>
        <label for="property">Описание товара (2)</label>
        <span class="helper-text" data-error="Введите desc"></span>
      </div>

      <div class="input-field">
        <input name="sizes" class="edit-input validate" id="sizes" placeholder="Enter sizes*" value="{{item.sizes}}">
        <label for="sizes">Размера товара (2)</label>
        <span class="helper-text" data-error="Введите sizes"></span>
      </div>
      <div class="InStock-edit">
        <input type="checkbox" id="inStock" name="inStock" value="true">
        <label for="inStock">В наличии</label>
      </div>


      <input type="hidden" name="id" value="{{item.id}}">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button type="submit" class="btn btn-primary">Редактировать вещь</button>


    </form>
    <form action="/catalog/remove" method="POST">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <input type="hidden" name="id" value="{{ item.id }}">
      <button class="btn red">Удалить вещь</button>
    </form>
  </div>
  <div>
    <img class="edit-img" src="{{item.img}}" alt="">
  </div>
